<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="Theme.Pixelknot" parent="Theme.Sherlock">
	    <item name="actionBarStyle">@style/Widget.Pixelknot.ActionBar</item>
	    <item name="android:actionBarStyle">@style/Widget.Pixelknot.ActionBar</item>
	    <item name="android:textAppearance">@style/p</item>
	</style>
    
	<style name="Widget.Pixelknot.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
	    <item name="background">#ff434343</item>
	    <item name="android:background">#ff434343</item>
	</style>
    
    <style name="action_display">
        <item name="android:background">#00000000</item>
        <item name="android:padding">0dip</item>
    </style>
    <style name="progress_button">
        <item name="android:background">#00000000</item>
    </style>
    <style name="message_holder">
        <item name="android:background">#80000000</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="h1">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="h2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:padding">6dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="h1_loader">
        <item name="android:textSize">46sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="p">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">6dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="p_link">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">6dip</item>
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="p_link_email">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">6dip</item>
        <item name="android:autoLink">email</item>
        <item name="android:linksClickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>